@page "/Maps"
@using BackEnd;
@using BackEnd.Enums;
@model WebApplication.Pages.Shared.MapModel
@{
    Map m = new Map(8);
    GameManager gm = new GameManager();
    List<Boat> boats = gm.GenerateDefaultBoats();
}
<div class="mapAndboat">
    <div id="gameMap">
        @{
            for(int width = 0; width < m.Size; width++)
            {
                for(int height = 0; height < m.Size; height++)
                {
                    Tile t = m.Tiles[m.Size * height + width];
                    @:<div class="col">@t.X;@t.Y</div>
                }
            }
        }
    </div>
    <div class="boatContainer">
        @{
            int temp = 0;
            foreach(Boat boat in boats)
            {
                temp++;
                string id = boat.Name + "_" + temp;
                string CSSclassBoat = "boat boat" + temp;
                <label for=@id>@boat.Name</label>
                <div for="@id" class="@CSSclassBoat">
                    @{for(int i = 0; i < boat.Length; i++)
                    {
                        <div class="boatPart"></div>
                    }
                    }
                    </div>
            }
        }
    </div>
</div>
<div class="spacer">
    <a class="begin" href="./game">Commencer la partie</a>
</div>